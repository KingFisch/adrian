{% if section.settings.checkk != blank %}
<section class="hcoprdt_timer">
  <div class="timer__details">
    <h4>{{section.settings.hds}}</h4>
    <h5>{{section.settings.subds}}</h5>
  </div>
<div id="timer"></div>
</section>
{% else %}
<style>
@media only screen and (max-width: 600px){
div#shopify-section-product-template {
    margin-top: 75px;
}
}
  </style>
{% endif %}


{% schema %}
  {
    "name": "Countdown Timer",
    "settings": [
		{
				"label": "Hide/Show",
				"type": "checkbox",
				"id": "checkk",
				"default": false
			},
		{
			"label": "Heading",
			"type": "text",
			"id": "hds"
		},
		{
			"label": "Sub Head",
			"type": "text",
			"id": "subds"
		}
]
  }
{% endschema %}

